# ============================================
# Pulse Backend - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git (only .env.example is committed)

# ============================================
# REQUIRED: Database
# ============================================
# Neon PostgreSQL Database
# Get from: https://console.neon.tech → Connection Details
NEON_DATABASE_URL=postgres://user:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require

# ============================================
# REQUIRED: Authentication (Clerk)
# ============================================
# Get from: https://dashboard.clerk.com → API Keys
CLERK_SECRET_KEY=sk_live_YOUR_CLERK_SECRET_KEY
CLERK_PUBLISHABLE_KEY=pk_live_YOUR_CLERK_PUBLISHABLE_KEY

# ============================================
# AI Model Providers
# ============================================
# Option 1: Vercel AI Gateway (recommended for centralized billing)
# Get from: https://vercel.com/docs/ai/gateway
VERCEL_AI_GATEWAY_API_KEY=

# Option 2: Direct provider keys (if not using gateway)
# Anthropic (Claude Opus 4, Claude Sonnet 4.5)
ANTHROPIC_API_KEY=sk-ant-api03-YOUR_ANTHROPIC_KEY

# xAI (Grok 4)
XAI_API_KEY=

# Groq (Llama 3 70B - fast inference)
GROQ_API_KEY=

# ============================================
# Trading API (ProjectX / TopStepX)
# ============================================
PROJECTX_USERNAME=your_projectx_username
PROJECTX_API_KEY=your_projectx_api_key

# ============================================
# Twitter/X API (for news feed)
# ============================================
X_BEARER_TOKEN=YOUR_X_BEARER_TOKEN
X_API_KEY=YOUR_X_API_KEY
X_API_SECRET=YOUR_X_API_SECRET

# ============================================
# Additional APIs
# ============================================
# Financial Modeling Prep (macroeconomic data for RiskFlow)
FMP_API_KEY=YOUR_FMP_API_KEY

# Redis (caching)
REDIS_URL=redis://default:password@your-redis-host:port

# Nitter (Twitter scraping fallback)
NITTER_BASE_URL=https://nitter.net

# Polymarket (prediction markets)
POLYMARKET_API_KEY=

# ============================================
# Server Configuration
# ============================================
PORT=8080
NODE_ENV=development
LOG_LEVEL=info
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://pulse.solvys.io

# ============================================
# Default AI Model
# ============================================
# Options: claude-opus-4, grok-4, claude-sonnet-4.5, groq-llama-3-70b
DEFAULT_AI_MODEL=claude-opus-4

# ============================================
# Fly.io Deployment
# ============================================
# Set secrets using: fly secrets set KEY=value -a your-app-name
# Required: NEON_DATABASE_URL, CLERK_SECRET_KEY, ANTHROPIC_API_KEY
# Recommended: CORS_ORIGINS, PROJECTX_USERNAME, PROJECTX_API_KEY
