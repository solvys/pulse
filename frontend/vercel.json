{
  "buildCommand": "bun run build",
  "outputDirectory": "dist",
  "devCommand": "bun run dev",
  "installCommand": "bun install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/chat",
      "destination": "https://pulse-api-withered-dust-1394.fly.dev/api/ai/chat"
    },
    {
      "source": "/api/:path*",
      "destination": "https://pulse-api-withered-dust-1394.fly.dev/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}