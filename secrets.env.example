# Copy this file to secrets.env and fill in your actual values
# DO NOT commit secrets.env to git

# Local Neon Database (Development)
DATABASE_URL="postgres://user@localhost:5432/pulse_dev"

# Production Neon Database (when available)
# DATABASE_URL="postgres://user:password@ep-xyz.us-east-1.aws.neon.tech/neondb?sslmode=require"

# ============================================
# Pulse Frontend Environment Variables for Vercel
# ============================================

# Backend API URL (Fly.io deployment)
NEXT_PUBLIC_API_URL=https://pulse-api-withered-dust-1394.fly.dev

# Clerk Authentication (Frontend)
# Clerk Publishable Key - can be public
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_YOUR_CLERK_PUBLISHABLE_KEY

# Clerk Secret Key - for server-side operations (keep private)
CLERK_SECRET_KEY=sk_live_YOUR_CLERK_SECRET_KEY

# Clerk Routes - use embedded components instead of hosted pages
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

